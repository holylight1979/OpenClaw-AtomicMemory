{
  "_comment": "This file is a TEMPLATE. Replace all {{PLACEHOLDER}} values with your actual secrets before use. Fields like meta/wizard/auth are auto-generated by openclaw onboard — merge, don't overwrite.",
  "browser": {
    "ssrfPolicy": {
      "dangerouslyAllowPrivateNetwork": false
    }
  },
  "auth": {
    "profiles": {
      "anthropic:default": {
        "provider": "anthropic",
        "mode": "api_key"
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "openai-codex/gpt-5.3-codex"
      },
      "workspace": "C:\\OpenClawWorkspace",
      "memorySearch": {
        "enabled": false
      },
      "contextPruning": {
        "mode": "cache-ttl",
        "ttl": "1h"
      },
      "compaction": {
        "mode": "safeguard"
      },
      "heartbeat": {
        "every": "30m"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "sandbox": {
        "mode": "off"
      }
    }
  },
  "tools": {
    "profile": "full",
    "deny": [
      "group:automation",
      "group:runtime",
      "group:fs",
      "sessions_spawn",
      "sessions_send",
      "gateway",
      "cron",
      "canvas",
      "nodes"
    ],
    "sessions": {
      "visibility": "agent"
    },
    "elevated": {
      "enabled": false
    },
    "exec": {
      "security": "deny",
      "ask": "always"
    },
    "fs": {
      "workspaceOnly": true
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto",
    "restart": true,
    "ownerDisplay": "raw"
  },
  "session": {
    "dmScope": "per-peer",
    "identityLinks": {
      "holylight": [
        "discord:{{DISCORD_USER_ID}}",
        "line:{{LINE_USER_ID}}"
      ]
    }
  },
  "channels": {
    "discord": {
      "enabled": true,
      "token": "{{DISCORD_BOT_TOKEN}}",
      "groupPolicy": "allowlist",
      "streaming": "off",
      "dmPolicy": "pairing",
      "guilds": {
        "{{DISCORD_SERVER_ID}}": {
          "requireMention": true,
          "users": [
            "{{DISCORD_USER_ID}}"
          ]
        }
      }
    },
    "line": {
      "enabled": true,
      "channelAccessToken": "{{LINE_CHANNEL_ACCESS_TOKEN}}",
      "channelSecret": "{{LINE_CHANNEL_SECRET}}",
      "dmPolicy": "pairing",
      "name": "光仔AI-LINE",
      "groupPolicy": "allowlist",
      "groups": {
        "{{LINE_GROUP_ID}}": {
          "requireMention": false,
          "allowFrom": ["*"]
        }
      }
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "{{GATEWAY_TOKEN_FROM_openclaw_doctor}}"
    },
    "tailscale": {
      "mode": "off",
      "resetOnExit": false
    }
  },
  "plugins": {
    "allow": [
      "line",
      "discord-reader",
      "discord",
      "computer-use",
      "claude-bridge"
    ],
    "entries": {
      "line": {
        "enabled": true
      },
      "discord-reader": {
        "enabled": true
      },
      "computer-use": {
        "enabled": true
      },
      "claude-bridge": {
        "enabled": true
      }
    }
  }
}
